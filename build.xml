<?xml version="1.0"?>
<project name="Goatlin-Kotlin-main" default="build" basedir=".">

    <!-- Define properties -->
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="build"/>
    <property name="bin.dir" value="bin"/>
    <property name="output" value="${bin.dir}"/>

    <!-- Initialize directories -->
    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${bin.dir}"/>
    </target>

    <!-- Build target -->
    <target name="build">
        <echo message="Build completed. Binary located at ${output}"/>
    </target>

    <!-- Clean target -->
    <target name="clean">
        <echo message="Cleaning up..."/>
        <delete dir="${build.dir}"/>
        <delete dir="${bin.dir}"/>
    </target>

</project>
